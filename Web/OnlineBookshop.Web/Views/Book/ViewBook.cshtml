    <div class="form-field">
        <label for="title">@Model.Title</label>
    </div>
    <div class="form-field">
        <label for="author">Author</label>
        <label>Authors:</label>
        @foreach (var author in Model.Authors)
        {
            <label>@author.FirstName @author.LastName</label>
        }
        </select>
    </div>
    <div class="form-field">
        <label for="publisher">Publisher: @Model.Publisher</label>
    </div>
    <div class="form-field">
        <fieldset class="checkbox-group">
            <legend class="checkbox-group-legend">Genres:</legend>
            @foreach (var genre in Model.Genres)
            {
                <label>@genre.Name</label>
            }
        </fieldset>
    </div>
    <div class="form-field">
        <label for="pages">Pages: @Model.Pages</label>
    </div>
    <div class="form-field">
        <label for="year">Year: @Model.Year</label>
    </div>
    <div class="form-field">
        <label for="description">Description: @Model.Description</label>
    </div>
    <div class="form-field">
        <label for="price">Price: @Model.Price</label>
    </div>
    <div class="form-field">
        <label for="language">Language:</label>
        @foreach (var language in Model.Languages)
        {
            <label>@language.Name</label>
        }
    </div>
</form>